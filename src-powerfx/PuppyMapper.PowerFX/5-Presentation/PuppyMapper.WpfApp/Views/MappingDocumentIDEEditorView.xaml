<views:MappingDocumentIDEEditorViewBase 
             x:Class="PuppyMapper.WPFApp.Views.MappingDocumentIDEEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:PuppyMapper.WPFApp.Views"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:viewmodels="clr-namespace:PuppyMapper.Viewmodels;assembly=PuppyMapper.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450">

    <UserControl.DataContext>
        <viewmodels:MappingDocumentIdeEditorViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="LoadMappingBtn" Content="Load Mapping" Grid.Column="0" Grid.Row="0" 
                Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <avalonedit:TextEditor Grid.Row="1" Grid.Column="0" x:Name="VarsCode" 
                                ShowLineNumbers="True"
                                FontFamily="Cascadia Code,Consolas,Menlo,Monospace"
                                Margin="8"
                                MinHeight="200"/>

        <avalonedit:TextEditor Grid.Row="2" Grid.Column="0" x:Name="RulesCode" 
                                ShowLineNumbers="True"
                                Margin="8"
                                MinHeight="200"
                                FontFamily="Cascadia Code,Consolas,Menlo,Monospace"/>

        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Button x:Name="RunMappingBtn" Content="Run Mapping" 
                    Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Button x:Name="RunFullMappingBtn" Content="Run Full Mapping" 
                    Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <TextBox x:Name="VarsCodeTxt"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical">
            <ListBox x:Name="Inputs"/>
            <Button x:Name="AddInputBtn" Content="Add Input"/>
            <avalonedit:TextEditor x:Name="InputTxt"
                                    ShowLineNumbers="True"
                                    Margin="8"
                                    FontFamily="Cascadia Code,Consolas,Menlo,Monospace"
                                    HorizontalAlignment="Stretch" 
                                    VerticalAlignment="Stretch"/>
        </StackPanel>

        <avalonedit:TextEditor Grid.Column="1" Grid.Row="2" x:Name="OutputTxt"
                                ShowLineNumbers="True"
                                Margin="8"
                                FontFamily="Cascadia Code,Consolas,Menlo,Monospace"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch"/>
    </Grid>
</views:MappingDocumentIDEEditorViewBase>