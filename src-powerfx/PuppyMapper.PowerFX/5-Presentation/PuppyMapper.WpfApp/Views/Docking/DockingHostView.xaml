<views:DockingHostViewBase x:Class="PuppyMapper.WpfApp.Views.Docking.DockingHostView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:PuppyMapper.WpfApp.Views.Docking"
             xmlns:avalon="clr-namespace:AvalonDock;assembly=Dirkster.AvalonDock"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <avalon:DockingManager x:Name="DockManager">
            <avalon:DockingManager.Layout>
                <avalon:LayoutRoot>
                    <avalon:LayoutPanel Orientation="Horizontal">
                        <avalon:LayoutDocumentPane>
                            <avalon:LayoutDocument Title="{Binding SelectedDocument.Title}">
                                <ContentControl Content="{Binding SelectedDocument}"/>
                            </avalon:LayoutDocument>
                        </avalon:LayoutDocumentPane>
                    </avalon:LayoutPanel>
                </avalon:LayoutRoot>
            </avalon:DockingManager.Layout>
        </avalon:DockingManager>
    </Grid>
</views:DockingHostViewBase>
