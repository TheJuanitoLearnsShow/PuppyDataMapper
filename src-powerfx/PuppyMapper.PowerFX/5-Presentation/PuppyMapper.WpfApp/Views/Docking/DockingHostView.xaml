<UserControl x:Class="PuppyMapper.WpfApp.Views.Docking.DockingHostView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:avalon="clr-namespace:AvalonDock;assembly=Dirkster.AvalonDock"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockingManager x:Name="DockManager">
            <DockingManager.Layout>
                <LayoutRoot>
                    <LayoutPanel Orientation="Horizontal">
                        <LayoutDocumentPane>
                            <LayoutDocument Title="{Binding SelectedDocument.Title}">
                                <ContentControl Content="{Binding SelectedDocument}"/>
                            </LayoutDocument>
                        </LayoutDocumentPane>
                    </LayoutPanel>
                </LayoutRoot>
            </DockingManager.Layout>
        </DockingManager>
    </Grid>
</UserControl>

