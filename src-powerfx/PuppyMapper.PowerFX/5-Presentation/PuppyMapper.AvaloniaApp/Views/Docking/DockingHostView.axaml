<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:docking="clr-namespace:PuppyMapper.AvaloniaApp.ViewModels.Docking"
             x:Class="PuppyMapper.AvaloniaApp.Views.Docking.DockingHostView"
             x:DataType="docking:DockingHostViewModel">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="250" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <TextBlock x:Name="HelpTxt">This is the shell</TextBlock>
    <!-- Right side: DockHost from Dock.Model -->
    <Border Grid.Column="1" BorderBrush="DarkBlue" BorderThickness="8">
      <DockControl x:Name="DockCtrl"  />
    </Border>
    
  </Grid>
</UserControl>