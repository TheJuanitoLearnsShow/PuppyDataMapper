<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:PuppyMapper.Viewmodels;assembly=PuppyMapper.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PuppyMapper.AvaloniaApp.Views.CsvInputEditorView">
    
    <Design.DataContext>
        <viewmodels:CsvInputEditorViewModel/>
    </Design.DataContext>
    <StackPanel>
        <TextBlock>File Path</TextBlock>
        <TextBox Name="FilePath"></TextBox>
        <TextBlock>Input Id</TextBlock>
        <TextBox Name="InputId"></TextBox>
        <Button Name="SaveInputBtn">Save</Button>
    </StackPanel>
</UserControl>
