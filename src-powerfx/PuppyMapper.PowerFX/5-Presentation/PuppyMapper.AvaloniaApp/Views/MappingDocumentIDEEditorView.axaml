<views:MappingDocumentIDEEditorViewBase xmlns="https://github.com/avaloniaui"
                                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                  xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
                                  xmlns:views="clr-namespace:PuppyMapper.AvaloniaApp.Views"
                                  xmlns:viewmodels="clr-namespace:PuppyMapper.Viewmodels;assembly=PuppyMapper.ViewModels"
                                  xmlns:inputs="clr-namespace:PuppyMapper.AvaloniaApp.Views.Inputs"
                                  xmlns:outputs="clr-namespace:PuppyMapper.AvaloniaApp.Views.Outputs"
                                  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                                  x:Class="PuppyMapper.AvaloniaApp.Views.MappingDocumentIDEEditorView">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <viewmodels:MappingDocumentIdeEditorViewModel/>
    </Design.DataContext>
    <Grid RowDefinitions="40,1*,1*" ColumnDefinitions="3*,2*" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
              
        <StackPanel Orientation="Horizontal">
            <TextBlock>Name:</TextBlock>
            <TextBox x:Name="NameTxt"></TextBox>
            <TextBlock>Id:</TextBlock>
            <TextBox x:Name="IdTxt" IsReadOnly="True"></TextBox>
            <Button x:Name="SaveMappingBtn" Content="Save Mapping" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                    Margin="8"   />
        </StackPanel>
       
        
        <!-- <Grid Grid.Row="1" Grid.Column="0" RowDefinitions="1*,1*,3*" ColumnDefinitions="1*"  -->
        <!--       HorizontalAlignment="Stretch" VerticalAlignment="Stretch"> -->
        <!--      -->
        <!--     <TextBlock>Inner row 0</TextBlock> -->
        <!-- </Grid> -->          
        <avaloniaEdit:TextEditor Grid.Row="1" Grid.Column="0" Name="VarsCode" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                 ShowLineNumbers="True"
                                 FontFamily="Cascadia Code,Consolas,Menlo,Monospace"
                                 Margin="8"
                                 MinHeight="200"
        />
        <avaloniaEdit:TextEditor Grid.Row="2"  Grid.Column="0" Name="RulesCode" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                 ShowLineNumbers="True"
                                 Margin="8"
                                 MinHeight="200"
                                 FontFamily="Cascadia Code,Consolas,Menlo,Monospace"/>   
        
        <StackPanel  Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                    Grid.Column="1" Grid.Row="0">
            <Button x:Name="RunMappingBtn" Content="Run Mapping" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                    Margin="4"  />
            <Button x:Name="RunFullMappingBtn" Content="Run Full Mapping" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                    Margin="4"  />
        </StackPanel>
         
         <!-- <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical"> -->
             <Grid Grid.Column="1" Grid.Row="1">
                 <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                 </Grid.RowDefinitions>
                 
                 <TextBlock>Inputs</TextBlock>
                 <ListBox Grid.Row="1" Name="Inputs">
                     <ListBox.ItemTemplate>
                         <DataTemplate>
                             <inputs:InputOptionsItemView />
                         </DataTemplate>
                     </ListBox.ItemTemplate>
                 </ListBox>
                 <StackPanel Grid.Row="2" Orientation="Horizontal">
                     <Button Name="AddInputBtn" HorizontalAlignment="Left">Add Input</Button>
                     <Button Name="ModifyInputBtn" HorizontalAlignment="Right">Modify Input</Button>
                 </StackPanel>
                 <TextBlock Grid.Row="3">Sample Input</TextBlock>
                 <avaloniaEdit:TextEditor Grid.Row="4" Name="InputTxt"
                                          HorizontalAlignment="Stretch" 
                                          VerticalAlignment="Stretch"
                                          ShowLineNumbers="True"
                                          Margin="8"
                                          FontFamily="Cascadia Code,Consolas,Menlo,Monospace"/>
             </Grid>
         <!-- </StackPanel> -->
        
        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Vertical">
            <TextBlock>Outputs</TextBlock>
            <ListBox Name="Outputs">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <outputs:OutputOptionsItemView />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal">
                <Button Name="AddOutputBtn" HorizontalAlignment="Left">Add Output</Button>
                <Button Name="ModifyOutputBtn" HorizontalAlignment="Right">Modify Output</Button>
            </StackPanel>
            <TextBlock>Sample Output</TextBlock>
            <avaloniaEdit:TextEditor Name="OutputTxt"
                                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                 ShowLineNumbers="True"
                                 Margin="8"
                                 FontFamily="Cascadia Code,Consolas,Menlo,Monospace"/>
        </StackPanel>
    </Grid>
</views:MappingDocumentIDEEditorViewBase>
