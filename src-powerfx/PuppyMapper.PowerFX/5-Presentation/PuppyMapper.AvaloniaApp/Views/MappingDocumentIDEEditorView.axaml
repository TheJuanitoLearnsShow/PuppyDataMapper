<views:MappingDocumentIDEEditorViewBase xmlns="https://github.com/avaloniaui"
                                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                  xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
                                  xmlns:views="clr-namespace:PuppyMapper.AvaloniaApp.Views"
                                  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                                  x:Class="PuppyMapper.AvaloniaApp.Views.MappingDocumentIDEEditorView">
    <Grid RowDefinitions="40,1*,1*" ColumnDefinitions="3*,1*">
        <avaloniaEdit:TextEditor Name="MappingDocument"
                                 ShowLineNumbers="True"
                                 FontFamily="Cascadia Code,Consolas,Menlo,Monospace"/>
         <Button x:Name="RunMappingBtn" Content="Run Mapping" Grid.Column="1" Grid.Row="0" 
                 Margin="4"  HorizontalAlignment="Left" Width="100"/>
         
        <avaloniaEdit:TextEditor Grid.Column="1" Grid.Row="1"  Name="InputTxt"
                                 ShowLineNumbers="True"
                                 FontFamily="Cascadia Code,Consolas,Menlo,Monospace"/>
        <avaloniaEdit:TextEditor Grid.Column="1" Grid.Row="2" Name="OutputTxt"
                                 ShowLineNumbers="True"
                                 FontFamily="Cascadia Code,Consolas,Menlo,Monospace"/>
    </Grid>
</views:MappingDocumentIDEEditorViewBase>
