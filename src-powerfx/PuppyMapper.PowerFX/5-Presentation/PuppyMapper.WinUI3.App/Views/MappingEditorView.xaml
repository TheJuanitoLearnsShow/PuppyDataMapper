<?xml version="1.0" encoding="utf-8"?>
<local:MappingEditorViewBase
    x:Class="PuppyMapper.WinUI3.App.Views.MappingEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PuppyMapper.WinUI3.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <local:MappingDocumentView x:Name="MappingDocumentView" 
                                   Grid.Column="0" 
                                   Margin="4"
                                   Grid.RowSpan="3"
        />
        <Button x:Name="RunMappingBtn" Content="Run Mapping" Grid.Column="1" Grid.Row="0" Margin="4"  HorizontalAlignment="Left" Width="100"/>
        <TextBox x:Name="InputTxt" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" ></TextBox>
        <TextBox x:Name="OutputTxt" IsReadOnly="True" Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" ></TextBox>
    </Grid>
</local:MappingEditorViewBase>
