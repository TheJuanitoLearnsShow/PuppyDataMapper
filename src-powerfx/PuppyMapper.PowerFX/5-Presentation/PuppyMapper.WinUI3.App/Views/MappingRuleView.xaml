<local:MappingRuleViewBase
    x:Class="PuppyMapper.WinUI3.App.Views.MappingRuleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PuppyMapper.WinUI3.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Margin="4" Padding="8">
        <Grid.ColumnDefinitions>ty
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="0" Grid.Row="0" x:Name="RuleNameBox" PlaceholderText="Name" Margin="4"/>
        <TextBox Grid.Column="1" Grid.Row="0" x:Name="FormulaBox" PlaceholderText="Formula"  Margin="4"/>
        <TextBox Grid.ColumnSpan="2" Grid.Row="1" 
                 x:Name="CommentsBox" TextWrapping="Wrap" 
                 AcceptsReturn="True" IsSpellCheckEnabled="True"
                    PlaceholderText="Comments" Margin="4"/>
    </Grid>
</local:MappingRuleViewBase>

